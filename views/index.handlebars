<div class='row text-center'>
  <div class='col-md-2'></div>
  <div class='col-md-4' id='to-eat'>
      {{#each toEat}}
        <p>{{sushi_name}}
          <button class="btn btn-success update-btn" sushi-id={{id}} devoured={{devoured}}><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
          <button class="btn btn-danger delete-btn" sushi-id={{id}}><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        </p>
      {{/each}}
  </div>
  <div class='col-md-4' id='eaten'>
      {{#each eaten}}
        <p>{{sushi_name}}
          <button class="btn btn-warning update-btn" sushi-id={{id}} devoured={{devoured}}><span class="glyphicon glyphicon-repeat" aria-hidden="true"></span></button>
          <button class="btn btn-danger delete-btn" sushi-id={{id}}><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        </p>
      {{/each}}
  </div>
  <div class='col-md-2'></div>
</div>

<div class='row text-center'>
  <div class='col-md-4'></div>
  <div class='col-md-4'>
  <form action="/add" method = "post">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="New sushi" id='new-sushi'>
    </div>
    <button type="submit" class="btn btn-default" id='add-btn'>Add new sushi!</button>
  </form>
  </div>
  <div class='col-md-4'></div>
</div>